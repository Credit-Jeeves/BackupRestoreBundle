<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="backup_restore.factory.class">ENC\Bundle\BackupRestoreBundle\Factory\BackupRestoreFactory</parameter>
    </parameters>

    <services>
        <defaults public="true"/>
        <service id="backup_restore.factory" class="%backup_restore.factory.class%">
            <argument type="service" id="service_container" />
        </service>
        <service id="enc.backup_restore_bundle.restore_command" class="ENC\Bundle\BackupRestoreBundle\Command\RestoreCommand">
            <tag name="console.command" command="database:restore"/>
        </service>
    </services>
</container>
